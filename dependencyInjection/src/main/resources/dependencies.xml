<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="address" class="com.bridgelabz.Address" scope="prototype">
        <property name="city" value="city"/>
        <property name="state" value="state"/>
        <property name="zip" value="zip"/>
    </bean>

    <bean id="employee1" class="com.bridgelabz.Employee" init-method="init">
        <property name="address" ref="address"/>
        <property name="name" value="employee1"/>
        <property name="phoneNo" value="11111111111"/>
    </bean>

    <bean id="employee2" class="com.bridgelabz.Employee" init-method="init">
        <property name="address" ref="address"/>
        <property name="name" value="employee2"/>
        <property name="phoneNo" value="2222222222"/>
    </bean>

    <bean id="company" class="com.bridgelabz.Company" init-method="init">
        <property name="name" value="bridgelabz"/>
        <property name="employees">
            <list value-type="com.bridgelabz.Employee">
                <ref bean="employee1"/>
                <ref bean="employee2"/>
            </list>
        </property>
    </bean>

</beans>